{
    "family": "cart-service",
    "networkMode": "awsvpc",
    "requiresCompatibilities": [
        "FARGATE"
    ],
    "cpu": "512",
    "memory": "1024",
    "executionRoleArn": "arn:aws:iam::448049790780:role/ecsTaskExecutionRole",
    "containerDefinitions": [
        {
            "name": "cart-service",
            "image": "448049790780.dkr.ecr.eu-north-1.amazonaws.com/microcart:cart-service",
            "portMappings": [
                {
                    "containerPort": 8003,
                    "hostPort": 8003
                }
            ],
            "environment": [
                {
                    "name": "AWS_REGION",
                    "value": "eu-north-1"
                },
                {
                    "name": "AWS_ACCESS_KEY_ID",
                    "value": "dummy"
                },
                {
                    "name": "AWS_SECRET_ACCESS_KEY",
                    "value": "dummy"
                },
                {
                    "name": "DYNAMODB_TABLE_NAME",
                    "value": "cart"
                },
                {
                    "name": "DYNAMODB_ENDPOINT_URL",
                    "value": "http://host.docker.internal:8000"
                },
                {
                    "name": "USER_SERVICE_URL",
                    "value": "http://host.docker.internal:8001"
                },
                {
                    "name": "PRODUCT_SERVICE_URL",
                    "value": "http://host.docker.internal:8002"
                }
            ]
        }
    ]
}