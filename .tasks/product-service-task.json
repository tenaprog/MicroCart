{
    "family": "product-service",
    "networkMode": "awsvpc",
    "requiresCompatibilities": [
        "FARGATE"
    ],
    "cpu": "512",
    "memory": "1024",
    "executionRoleArn": "arn:aws:iam::448049790780:role/ecsTaskExecutionRole",
    "containerDefinitions": [
        {
            "name": "product-service",
            "image": "448049790780.dkr.ecr.eu-north-1.amazonaws.com/microcart:product-service",
            "portMappings": [
                {
                    "containerPort": 8002,
                    "hostPort": 8002
                }
            ],
            "environment": [
                {
                    "name": "AWS_REGION",
                    "value": "eu-north-1"
                },
                {
                    "name": "AWS_ACCESS_KEY_ID",
                    "value": "dummy"
                },
                {
                    "name": "AWS_SECRET_ACCESS_KEY",
                    "value": "dummy"
                },
                {
                    "name": "AWS_ENDPOINT_URL",
                    "value": "http://localstack:4566"
                },
                {
                    "name": "DYNAMODB_ENDPOINT_URL",
                    "value": "http://host.docker.internal:8000"
                },
                {
                    "name": "DYNAMODB_TABLE_NAME",
                    "value": "products"
                },
                {
                    "name": "USER_SERVICE_URL",
                    "value": "http://host.docker.internal:8001"
                }
            ]
        }
    ]
}