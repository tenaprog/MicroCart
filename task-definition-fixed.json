{
    "family": "microcart-task",
    "taskRoleArn": "arn:aws:iam::448049790780:role/ecsTaskRole",
    "executionRoleArn": "arn:aws:iam::448049790780:role/ecsTaskExecutionRole",
    "networkMode": "awsvpc",
    "requiresCompatibilities": [
        "FARGATE"
    ],
    "cpu": "1024",
    "memory": "2048",
    "containerDefinitions": [
        {
            "name": "user_service",
            "image": "448049790780.dkr.ecr.eu-north-1.amazonaws.com/user_service:latest",
            "cpu": 256,
            "memory": 512,
            "essential": true,
            "portMappings": [
                {
                    "containerPort": 8001,
                    "protocol": "tcp"
                }
            ],
            "environment": [
                {
                    "name": "AWS_REGION",
                    "value": "eu-north-1"
                },
                {
                    "name": "DYNAMODB_TABLE_NAME",
                    "value": "users"
                }
            ],
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-group": "/ecs/microcart",
                    "awslogs-region": "eu-north-1",
                    "awslogs-stream-prefix": "ecs"
                }
            }
        },
        {
            "name": "cart_service",
            "image": "448049790780.dkr.ecr.eu-north-1.amazonaws.com/cart_service:latest",
            "cpu": 256,
            "memory": 512,
            "essential": true,
            "portMappings": [
                {
                    "containerPort": 8003,
                    "protocol": "tcp"
                }
            ],
            "environment": [
                {
                    "name": "AWS_REGION",
                    "value": "eu-north-1"
                },
                {
                    "name": "DYNAMODB_TABLE_NAME",
                    "value": "cart"
                },
                {
                    "name": "USER_SERVICE_URL",
                    "value": "http://user_service:8001"
                },
                {
                    "name": "PRODUCT_SERVICE_URL",
                    "value": "http://product_service:8002"
                }
            ],
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-group": "/ecs/microcart",
                    "awslogs-region": "eu-north-1",
                    "awslogs-stream-prefix": "ecs"
                }
            }
        },
        {
            "name": "product_service",
            "image": "448049790780.dkr.ecr.eu-north-1.amazonaws.com/product_service:latest",
            "cpu": 256,
            "memory": 512,
            "essential": true,
            "portMappings": [
                {
                    "containerPort": 8002,
                    "protocol": "tcp"
                }
            ],
            "environment": [
                {
                    "name": "AWS_REGION",
                    "value": "eu-north-1"
                },
                {
                    "name": "DYNAMODB_TABLE_NAME",
                    "value": "products"
                },
                {
                    "name": "USER_SERVICE_URL",
                    "value": "http://user_service:8001"
                }
            ],
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-group": "/ecs/microcart",
                    "awslogs-region": "eu-north-1",
                    "awslogs-stream-prefix": "ecs"
                }
            }
        }
    ]
}